# B2B Risk Monitoring Example - Environment Configuration
# Copy to .env and customize

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://reclapp:reclapp@postgres:5432/reclapp

# ============================================================================
# EVENT STORE
# ============================================================================
EVENTSTORE_URL=esdb://eventstore:2113?tls=false

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://redis:6379

# ============================================================================
# AI CONTRACT SETTINGS
# ============================================================================
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_ACTIONS_PER_MINUTE=30
AI_SANDBOX_MODE=true

# ============================================================================
# CAUSAL LOOP SETTINGS
# ============================================================================
CAUSAL_DECAY_RATE=0.01
CAUSAL_MIN_CONFIDENCE=0.3
CAUSAL_MAX_ADJUSTMENT=0.1
CAUSAL_ANOMALY_THRESHOLD=0.25

# ============================================================================
# EXTERNAL APIS (Optional)
# ============================================================================
# KRS_API_URL=https://api-krs.ms.gov.pl
# KRS_API_KEY=your-api-key
# CEIDG_API_URL=https://dane.biznes.gov.pl/api/ceidg
# CEIDG_API_KEY=your-api-key
# CREDIT_BUREAU_API_URL=https://api.creditbureau.pl
# CREDIT_BUREAU_API_KEY=your-api-key

# ============================================================================
# NOTIFICATIONS
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SMTP_HOST=smtp.company.com
# SMTP_PORT=587
# SMTP_USER=alerts@company.com
# SMTP_PASS=your-password
# ALERT_EMAIL_TO=risk-team@company.com

# ============================================================================
# MONITORING (Optional - use with --profile monitoring)
# ============================================================================
PROMETHEUS_ENABLED=false
GRAFANA_ADMIN_PASSWORD=admin
