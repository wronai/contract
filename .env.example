# ============================================================================
# Reclapp Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# API
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3000

# Event Store
EVENTSTORE_URL=esdb://localhost:2113?tls=false
EVENTSTORE_INSECURE=true

# Database (if using PostgreSQL for read models)
DATABASE_URL=postgresql://reclapp:reclapp@localhost:5432/reclapp

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# MQTT (for IoT/Hardware)
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Security
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AI Contract Defaults
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_ACTIONS_PER_MINUTE=60
AI_SANDBOX_MODE=true

# Causal Loop
CAUSAL_DECAY_RATE=0.01
CAUSAL_MIN_CONFIDENCE=0.3
CAUSAL_MAX_ADJUSTMENT=0.1

# External APIs (optional)
KRS_API_URL=https://api-krs.ms.gov.pl
CEIDG_API_URL=https://dane.biznes.gov.pl/api/ceidg

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Sentry (optional)
SENTRY_DSN=
