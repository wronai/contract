{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@dsl/*": ["dsl/*"],
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": [
    "dsl/**/*.ts",
    "core/**/*.ts",
    "modules/**/*.ts",
    "api/**/*.ts",
    "generators/**/*.ts",
    "hardware/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
